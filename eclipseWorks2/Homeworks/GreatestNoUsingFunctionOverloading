package IT916_HW;
import java.util.Scanner;
public class GreatestNoUsingFunctionOverloading {
	public class GreatestNumber {
	    public static void main(String[] args) {
	    	try(Scanner input = new Scanner(System.in)){
	    	System.out.println("Enter a number:");
	    	int num1 = input.nextInt();
	    	System.out.println("Enter a number:");
	    	int num2 = input.nextInt();
	    	System.out.println("Enter a number:");
	    	int num3 = input.nextInt();
	    	
	        
	        System.out.println("The greatest number is: " + findGreatestNumber(num1, num2, num3));
	    }
	    }
	    
	    public static int findGreatestNumber(int num1, int num2) {
	        return Math.max(num1, num2);
	    }
	    
	    public static int findGreatestNumber(int num1, int num2, int num3) {
	        int greatest = Math.max(num1, Math.max(num2, num3));
	        return greatest;
	    }
	}

}
